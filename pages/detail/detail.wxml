<!--pages/detail/detail.wxml-->
<image style='width:100%;height:370px;background-color:#5dae' src="https://stationwu.cn/{{kitty.imageUrl}}" />
<view>
<label>{{kitty.gender}}</label>
</view>
<view>
<label>{{kitty.birthday.year}}-{{kitty.birthday.monthValue}}-{{kitty.birthday.dayOfMonth}}</label>
</view>
<view class="weui-cells weui-cells_after-title">
<input class="weui-input" type='number' value='{{price}}'></input>
</view>
<view class="weui-footer weui-footer_fixed-bottom">
  <button type="primary" bindtap="sale">{{button}}</button>
</view>